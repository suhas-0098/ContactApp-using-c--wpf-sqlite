<UserControl x:Class="ContactApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContactApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid Background="#AAE5E5E5">
        <StackPanel Margin="5">
            <TextBlock x:Name="nameTextBlock" Text="Name lastName" FontSize="20"></TextBlock>
            <TextBlock x:Name="emailTextBlock"  Text="Email@example.com" FontSize="15" Foreground="Orange"></TextBlock>
            <TextBlock x:Name="phoneTextBlock" Text="12345678910" FontSize="15" Foreground="DodgerBlue"></TextBlock>

        </StackPanel>

    </Grid>
</UserControl>
