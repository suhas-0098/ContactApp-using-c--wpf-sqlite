<Window x:Class="ContactApp.NewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactApp"
        mc:Ignorable="d"
        Title="NewContact" Height="300" Width="300">
    <Grid>

        <StackPanel Margin="10">
            <Label Content="Name"></Label>
                <TextBox x:Name="nametextbox" Margin="0,0,0,5"/>
            
            <Label Content="Email"></Label>
            <TextBox x:Name="emailtextbox" Margin="0,0,0,5"/>
            
            <Label Content="Phone"></Label>
            <TextBox x:Name="phonetextbox" Margin="0,0,0,5"/>
            <Button Content="Save" Click="saveButton_Click"
                    Foreground="White"
                    Background="Green"
                    />



        </StackPanel>
        
    </Grid>
</Window>
